    \footnote{Bild gemeinfrei}\\[1cm] % Include a department/university logo - this will require the graphicx package
    \textsc{\Large $1}\\[0.5cm] % Major heading such as course name
    \textsc{\large $2}\\[0.5cm] % Minor heading such as course title

    % ----------------------------------------------------------------------------------------
    % TITLE SECTION
    % ----------------------------------------------------------------------------------------
    % \begin{onehalfspace}
    \HRule \\[0.4cm]
    { \LARGE \bfseries \Title}\\[0.1cm]
